// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: "InterVariable";
    --aw-font-serif: "InterVariable";
    --aw-font-heading: "InterVariable";

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: "InterVariable";
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: "InterVariable";
    --aw-font-serif: "InterVariable";
    --aw-font-heading: "InterVariable";

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  /* Code block overflow handling for small screens */
  .prose pre {
    overflow-x: auto;
    white-space: pre;
    word-wrap: normal;
  }

  .prose code {
    white-space: pre-wrap;
    word-break: break-word;
  }

  /* Ensure code blocks don't break layout on small screens */
  .prose pre code {
    white-space: pre;
    word-wrap: normal;
  }

  /* Prevent horizontal overflow on small screens */
  html {
    overflow-x: hidden;
    max-width: 100vw;
  }

  body {
    overflow-x: hidden;
    max-width: 100vw;
  }

  /* Ensure all elements respect viewport width */
  * {
    max-width: 100%;
    box-sizing: border-box;
  }

  /* Ensure prose content doesn't overflow container */
  .prose {
    max-width: 100%;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  /* Responsive prose sizing */
  @media (max-width: 640px) {
    .prose {
      font-size: 0.875rem;
      line-height: 1.5;
    }
  }

  /* Additional overflow protection for prose elements */
  .prose p,
  .prose li,
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    max-width: 100%;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  /* Ensure code blocks are properly contained */
  .prose pre {
    max-width: 100%;
    overflow-x: auto;
    white-space: pre;
    word-wrap: normal;
  }

  /* Handle long inline code */
  .prose code:not(pre code) {
    white-space: pre-wrap;
    word-break: break-all;
    max-width: 100%;
  }
</style>
