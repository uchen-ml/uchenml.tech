---
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  title: string;
  description: string;
  extraClasses: string;
}

const { title, description, extraClasses } = Astro.props;
---

<div
  class={`p-5 sm:p-6 lg:p-8 border-2 first:rounded-t-3xl last:rounded-b-3xl border-box-border` +
    ` bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden ${extraClasses} space-y-4 `}
>
  <h2 class={`text-lg md:text-xl font-semibold text-heading-2`}>
    {title}
  </h2>
  <Paragraph>
    {description}
  </Paragraph>
</div>
